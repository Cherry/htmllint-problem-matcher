{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"declaration": true,
		"outDir": "dist",
		"lib": ["ESNext"],
		"strict": true,
		"alwaysStrict": true,
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
